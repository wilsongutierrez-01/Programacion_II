<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgShow"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/lblMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="Juan Perez"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblNumeroMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblMarca"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:text="2626-2222"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblNumeroChasis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNumeroMotor"
        android:layout_marginLeft="90dp"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:text="Presentacion"
        android:textColor="#8BC34A"/>

    <TextView
        android:id="@+id/lblaño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lblModelo"
        android:layout_marginLeft="250dp"
        android:text="Año"
        android:textColor="#8BC34A"/>



</RelativeLayout>